@model React_To_VS2022.Models.Card

@{
    ViewBag.Title = "Update Card";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-primary mb-4">Update Card</h2>
            @using (Html.BeginForm("Update", "Cards", FormMethod.Post, new { @class = "w-100" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="mb-3">
                    <label class="form-label" for="Title">Title</label>
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required", id = "Title" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Author">Author</label>
                    @Html.TextBoxFor(m => m.Author, new { @class = "form-control", required = "required", id = "Author" })
                    @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Description">Description</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", required = "required", id = "Description" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a class="btn btn-secondary ms-2" href="@Url.Action("Details", "Cards", new { id = Model.Id })">Back to Details</a>
                </div>
            }
        </div>
    </div>
</div>
